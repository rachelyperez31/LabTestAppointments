@using LabTestAppointments.Data.Entities
@model LabTestAppointments.Data.Entities.HealthInsurance

@{
    ViewData["Title"] = "Editar seguros médicos";
    var insuranceProviders = ViewBag.InsuranceProviders;
}

<h1>Editar</h1>

<h4>Seguros médicos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plan" class="control-label"></label>
                <input asp-for="Plan" class="form-control" />
                <span asp-validation-for="Plan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceProviderId" class="control-label">Aseguradora</label>
                <select asp-for="InsuranceProviderId" asp-items="@(new SelectList(insuranceProviders, "Id", "InsuranceProvider.Name"))"></select>
                <span asp-validation-for="InsuranceProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atrás</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



